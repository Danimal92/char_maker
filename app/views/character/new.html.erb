<h1>Please choose from the following: </h1>
<%= form_for(@character) do |f| %>
  <%= f.collection_select :race_id, Race.all, :id, :name %>
  <%= f.collection_select :job_id, Organization.all, :id, :name %>
  <%= f.collection_select :background_id, Organization.all, :id, :name %>
  <%= f.collection_select :organization_id, Organization.all, :id, :name %>
  <%= f.collection_select :organization_id, Organization.all, :id, :name %>
  <%= f.submit %>
<% end %>